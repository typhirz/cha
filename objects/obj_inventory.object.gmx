            <string>///Creation

/*
Item List
-1 - None
0 - Mithril Plate

*/

// items are handled in an array containing their ID and their count
// functionally, this is a 3d array.

if !global.inv_exists {
    globalvar showInv;
    showInv = false;
    globalvar maxItems;
    maxItems = 9;

    // used for the inventory array calculations
    globalvar inv_width;
    inv_width = 3;
    globalvar inv_height;
    inv_height = ceil(maxItems / inv_width)


    // creates the actual inventory array, that holds the items and counts
    for (j = 0; j &lt; inv_height; j++) {
        for (i = 0; i &lt; inv_width; i++) {
            // a "none" item with a count of 0, i.e., empty
            global.inventory[i, j] = scr_item(-1,0);
        }
    }
    
    global.inv_exists = true;
}

// creates the mouse object that can hold an item
globalvar mouseItem;
mouseItem = scr_item(-1, 0)
instance_create(0,0,obj_inv_mouse);

scr_itempickup(0, 1);
scr_itempickup_slot(0, 1, 2, 1);
